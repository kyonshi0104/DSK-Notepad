#overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
}

#popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    background: #fff;
    padding: 1.5em;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    min-width: 300px;
    max-width: 80%;
    text-align: center;
    opacity: 0;
    visibility: hidden;
    transform: scale(0.95);
    transition: opacity 150ms ease-out, transform 150ms ease-out, visibility 0s linear 150ms;
}

#popup.show {
    opacity: 1;
    visibility: visible;
    transform: scale(1);
    transition: opacity 150ms ease-out, transform 150ms ease-out, visibility 0s;
}

#closeBtn {
    background: none;
    border: none;
    float: right;
    font-size: large;
}
